package com.org;

import java.util.List;

import org.springframework.boot.CommandLineRunner;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.context.ApplicationContext;

import com.org.dao.IProduit;
import com.org.entities.Produit;
import com.org.service.ProduitImpl;

@SpringBootApplication
public class ProductManagementApplication implements CommandLineRunner{

	public static void main(String[] args) {
		ApplicationContext ctx =SpringApplication.run(ProductManagementApplication.class, args);
	
	IProduit produit = (IProduit) ctx.getBean("IProduit.Class");
	List<Produit> prods = produit.getAllPrduits();
	System.out.println(prods.toString());
	}

	@Override
	public void run(String... args) throws Exception {
		
